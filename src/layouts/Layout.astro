---
import "@fontsource/dm-sans/400-italic.css";
import "@fontsource/dm-sans/400.css";
import "@fontsource/dm-sans/700-italic.css";
import "@fontsource/dm-sans/700.css";
import "@fontsource/source-serif-4/variable.css";
import Favicons from "../components/Favicons.astro";
import Footer from "../components/Footer.astro";
import Navigation from "../components/Navigation.astro";
import SEO from "../components/SEO.astro";

interface Props {
  title?: string;
  description?: string;
  slug?: string;
  previewImage?: string;
}

const { title, description, previewImage, slug } = Astro.props;

const defaultTitle = "Life Centered Design Collective";
const pageTitle = !title ? defaultTitle : `${title}  |  ${defaultTitle}`;
const pageDescription = description
  ? description
  : "Life Centered Design Collective";
const newSlug = slug ? `/${slug}` : "";
const pagePreviewImage = previewImage ? previewImage : "og-image.png";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <SEO
      title={pageTitle}
      description={pageDescription}
      slug={newSlug}
      previewImage={pagePreviewImage}
    />
    <Favicons />
  </head>
  <body>
    <Navigation />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
