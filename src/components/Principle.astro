---
import Text from "../design-system/Text.astro";

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<Text as="h3" weight="bold" uppercase className="text-text mb-2">
  {title}
</Text>
<Text as="p" className="text-text-light">
  {description}
</Text>
