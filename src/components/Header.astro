---
import { Image } from "@astrojs/image/components";
import Button from "../design-system/Button.astro";
import Container from "../design-system/Container.astro";
import Heading from "../design-system/Heading.astro";
import Text from "../design-system/Text.astro";
---

<section class="relative">
  {/* Background */}
  <div class="absolute inset-0 flex">
    <div class="w-full md:w-2/3 bg-collective-grey"></div>
    <div class="hidden md:block w-1/3 bg-collective-header-bg"></div>
  </div>

  {/* Foreground */}
  <div class="relative">
    <Container className="flex">
      <Container
        inset
        className="w-full md:w-2/3 pt-40 sm:pt-80 pb-16 sm:pb-32"
      >
        <div class="max-w-prose">
          <Heading level="1" className="mb-8 text-collective-text">
            <span style="font-weight: 400;">
              The <span class="font-bold">Life Centered Design</span>{" "}
              Collective
            </span>
          </Heading>
          <Text
            as="p"
            size="large"
            className="text-collective-text-light mb-20"
          >
            Fostering the Life-centered Design mindset
          </Text>
          <Button size="large" href="/#about">About the Collective</Button>
        </div>
      </Container>
      <Image
        src="/images/earth.png"
        alt="Image of the earth"
        format="avif"
        width={1480}
        height={1300}
        class="hidden md:block object-contain w-1/3 bg-collective-header-bg"
      />
    </Container>
  </div>
</section>
