---
import { Image } from "astro:assets";
import earthImg from "../assets/earth.png";
import Button from "../design-system/Button.astro";
import Container from "../design-system/Container.astro";
import Heading from "../design-system/Heading.astro";
import Text from "../design-system/Text.astro";
---

<section class="relative">
  <!-- Background and earth image -->
  <div class="absolute inset-0 flex">
    <div class="w-full md:w-1/2 lg:w-2/3 bg-grey"></div>
    <div class="hidden md:block md:w-1/2 lg:w-1/3 bg-header-bg">
      <Image
        src={earthImg}
        alt="Image of the earth"
        class="object-cover object-left w-full h-full"
        loading="eager"
      />
    </div>
  </div>

  <!-- Foreground -->
  <Container className="flex relative">
    <Container
      inset
      className="w-full md:w-1/2 lg:w-2/3 pt-40 sm:pt-80 pb-16 sm:pb-32"
    >
      <div class="max-w-prose">
        <Heading level="1" className="mb-8 text-text">
          <span style="font-weight: 400;">
            The <span class="font-bold">Life-centered Design</span>{" "}
             Collective
          </span>
        </Heading>
        <Text as="p" size="large" className="text-text-light mb-20">
          Fostering the Life-centered Design mindset
        </Text>
        <Button size="large" href="/#about">About the Collective</Button>
      </div>
    </Container>
    <div class="md:w-1/2 lg:w-1/3"></div>
  </Container>
</section>
