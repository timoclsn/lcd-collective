---
import { Picture } from "@astrojs/image/components";
import Container from "../design-system/Container.astro";
import Text from "../design-system/Text.astro";
---

<section id="resources" class="relative">
  <div class="relative">
    <Container className="block md:flex">
      <Container inset className="md:w-1/2 lg:w-2/3 py-20">
        <Picture
          src="/images/coming-soon.png"
          alt="Coming soon illustration"
          sizes="75vw, (min-width: 768px) 50vw"
          widths={[600, 800, 1000, 1200, 1400]}
          aspectRatio={736 / 548}
          class="block w-3/4 mx-auto"
        />
      </Container>
      <Container
        inset
        className="w-full md:w-1/2 lg:w-1/3 flex items-start justify-center flex-col py-8"
      >
        <Text as="p" size="large" className="mb-4 text-text-light"
          >Coming soon...</Text
        >
        <h2 class="font-serif font-bold text-4xl lg:text-6xl text-text">
          A collection of ressources from the group
        </h2>
      </Container>
    </Container>
  </div>
</section>
