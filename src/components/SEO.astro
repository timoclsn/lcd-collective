---
interface Props {
  title: string;
  description: string;
  slug: string;
  previewImage: string;
}

const { title, description, previewImage, slug } = Astro.props;
---

<title>{title}</title>
<meta name="description" content={description} />
<link rel="canonical" href={`https://lifecentereddesign.co${slug}`} />

<meta property="og:type" content="website" />
<meta property="og:site_name" content="Life Centered Design Collective" />
<meta property="og:locale" content="en" />
<meta property="og:url" content={`https://lifecentereddesign.co${slug}`} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta
  property="og:image"
  content={`https://lifecentereddesign.co/images/og/${previewImage}`}
/>
<meta property="og:image:alt" content="The life-centered design collective" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />

<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
