---
import { getEntry, render } from "astro:content";
import Container from "../design-system/Container.astro";
import Heading from "../design-system/Heading.astro";
import Layout from "../layouts/Layout.astro";

const page = await getEntry("pages", "imprint");
if (!page) {
  throw new Error("Page not found");
}
const { Content } = await render(page);
---

<Layout title={page.data.title} slug={page.id}>
  <Container inset>
    <section class="space-y-20 max-w-prose mx-auto">
      <Heading level="1" className="mb-6">
        {page.data.title}
      </Heading>
      <div class="prose">
        <Content />
      </div>
    </section>
  </Container>
</Layout>
